<% layout('layouts/boilerplateAll') %>
  <div class="container justify-content-center align-items-center mt-5 mb-3">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 ">
        <div class="card shadow">
          <img src="https://images.unsplash.com/photo-1595475038705-1af15f928681?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1471&q=80" alt=""
          class="card-img-top">
          <div class="card-body"> 
            <h5 class="card-title">Login</h5>
          <form action="/login" method="POST" novalidate class="validate">
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" autofocus required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-success">Login</button>
            </div>
          </form>
          </div>
          
        </div>
      </div>
    </div>
  </div>